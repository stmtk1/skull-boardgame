{
    "compilerOptions": {
        "target": "ES2015",
        "module": "ES2020",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "typeRoots": ["./src/types"],
        "lib": ["DOM", "ES2020"],
        "strict": true,
        "jsx": "react"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules/**/*", "dist/**/*"],
    "ts-node": {
        "complerOptions": {
            "target": "ES2015",
            "module": "CommonJS"
        }
    }
}
